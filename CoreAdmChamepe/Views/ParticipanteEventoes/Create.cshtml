@model CoreAdmChamepe.Models.Context.ParticipanteEvento

@{
                /**/

                ViewBag.Title = "Create";
                Layout = "~/Views/Shared/_Layout.cshtml";
}



@using (Html.BeginForm("Create", "ParticipanteEventoes", FormMethod.Post))
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-sm-12">
            <h4>Cadastre o participante do evento</h4>
            <hr />
        </div>
    </div>
    if (ViewBag.error != null)
    {
        <div class="row">
            <div class="alert alert-danger">
                <p>@ViewBag.error</p>
            </div>
        </div>
    }

        <div class="row">

            <div class="form-horizontal">

                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="col-sm-6">
                    <div class="form-group">
                        @Html.LabelFor(model => model.PartcipanteNomeCompleto, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.PartcipanteNomeCompleto, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.PartcipanteNomeCompleto, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ParticipanteRg, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.ParticipanteRg, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ParticipanteRg, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ParticipanteEmail, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.ParticipanteEmail, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ParticipanteEmail, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ParticipanteTelefone, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.ParticipanteTelefone, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ParticipanteTelefone, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.ParticipanteIdade, htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.ParticipanteIdade, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.ParticipanteIdade, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.IgrejaId, "IgrejaId", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            @Html.DropDownList("IgrejaId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.IgrejaId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.LabelFor(model => model.EventoId, "EventoId", htmlAttributes: new { @class = "control-label col-md-3" })
                        <div class="col-md-9">
                            <input type="hidden" value="@ViewBag.Evento" name="EventoId" id="EventoId" />
                            @Html.DropDownList("EventoId", null, htmlAttributes: new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.EventoId, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-md-offset-3 col-md-9">
                            <input type="submit" value="Salvar" class="btn btn-primary" />
                            <a href=" @Url.Action("Index", "ParticipanteEventoes")" class="btn btn-success">Listar Inscritos</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-sm-6">
                <div>
                    @if (ViewBag.Evento == 1)
                    {
                        <img src="~/Imagens/setorial 01.jpeg" alt="img-rounded" style="width:70%">
                    }@if (ViewBag.Evento == 2)
                    {
                        <img src="~/Imagens/setorial 02.jpeg" alt="img-rounded" style="width:70%">
                    }@if (ViewBag.Evento == 3)
                    {
                        <img src="~/Imagens/setorial 03.jpeg" alt="img-rounded" style="width:70%">
                    }

                </div>
            </div>
        </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
